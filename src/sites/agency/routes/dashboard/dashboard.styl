.dashboard
  .currency
    width 8rem
    display inline-block
    text-align right
  .overview, .income
    width 100%
    border-spacing 0
    border-radius 3px
    margin-bottom 30px
    position relative
    box-sizing border-box
    overflow hidden
    .tr
      &.head-two, &.total
        .td 
          font-weight 600
          background vs-tablegrey
  @media screen and (max-width:720px)
    .income
      .tr
        flex-direction column
        &.head-two
          display none
        .td, .th
          width 100%
          .inner
            display flex
            label
              display block
              flex 1
              text-align left
              color vs-grey
            span
              flex 1
              text-align right
        