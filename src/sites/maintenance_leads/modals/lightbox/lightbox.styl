.modal.lightbox
  display flex
  position relative
  padding 0px
  .big-img
    max-width 100%
    max-height 100%
    object-fit cover
  .img-index
    position absolute
    bottom 1rem
    right 1rem
    display flex
    background white
    border 1px solid vs-orange
    padding .2rem
    .index-img
      background-size cover
      width 3rem
      height 3rem
      cursor pointer
      margin .2rem