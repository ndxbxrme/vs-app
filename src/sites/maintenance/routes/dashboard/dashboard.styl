.maintenance-dashboard-route
  flex-direction column
  .maint-primary-bar
    background #fff
    border-bottom 1px solid vs-lightgrey
    z-index 20
    width 100%
    padding 10px 0px
    .container-xl
      padding 0 15px
    .button 
      margin-bottom 0px
    .maint-today-label
      color vs-orange
      font-size 1.6rem
      font-weight 600
    .button.button-active
      background vs-orange
      color #fff
      border-color vs-orange
    .maint-user-select
      min-width 200px
      max-width 250px
      .select2-container
        img 
          border-radius 50%
        .select2-choice
          border-radius 4px
          border 1px solid vs-lightgrey
          background #fff
          height 60px
          line-height 60px
          padding 0px 10px
          font-size 1.3rem
          color vs-grey
          box-shadow none
          .select2-arrow
            border-radius 0 4px 4px 0
            background none
            border none
            top 15px
        &.select2-dropdown-open .select2-choice
          border-color vs-orange
          border-bottom-left-radius 0
          border-bottom-right-radius 0

  .maint-secondary-panel
    background white
    margin-bottom 45px
    padding 10px
    border-bottom 1px solid vs-lightgrey
    .maint-filter-pills
      display flex
      flex-wrap wrap
      gap 10px
      .filter-item
        font-size 1.6rem
        display inline-flex
        align-items center
        position relative
        color vs-grey
        background white
        font-weight 600
        padding 5px 15px 5px 35px
        border 1px solid vs-lightgrey
        border-radius 30px
        text-decoration none
        &:before
          content ''
          position absolute
          top 50%
          transform translateY(-50%)
          left 10px
          width 20px
          height 20px
          border-radius 50%
          background vs-lightgrey
        &:hover
          border-color vs-orange
          color vs-orange
        &.selected
          background vs-orange
          color white
          border-color transparent
          &:before
            background vs-green
    .maint-panel-section
      .maint-kv-table
        display flex
        flex-direction row
        gap 50px
        .maint-kv-row
          .text-muted
            color vs-grey
          .fw-semibold
            font-weight 600
          .loss
            color vs-red
          .profit
            color vs-green
  .date-swiper-holder 
    .date-swiper-box 
      background rgba(255,255,255,0.3)
      backdrop-filter blur(8px)
      -webkit-backdrop-filter blur(8px)
      border-radius 30px
      padding 40px
      width 500px
      max-width 100%
      .date-swiper-close
        color vs-grey
        border 1px solid vs-lightgrey
    .button-row 
      display none
  .maintenance-calendar-dir 
    padding 0px 30px
    .controls
      border: 1px solid vs-lightgrey
      border-radius 30px
      display flex
      justify-content center
      align-items center
      width fit-content
      margin 0 auto 30px
      padding 0px
      background white
      a 
        color vs-grey
        font-size 1.6rem
        font-weight 600
        border-right 1px solid vs-lightgrey
        padding 5px 10px
        &:last-child
          border-right none
  .maintenance-calendar-dir .carousel .week .day .legend 
    font-size 1.4rem

.maintenance-task-popup-dir .popup 
  border 1px solid vs-lightgrey
  border-radius 20px
  padding 30px
  flex-direction column
  .controls 
    display flex
    align-items center
    justify-content space-between
    gap 20px
    margin-top 20px
    text-align left
.task-modal
  padding 30px

@media screen and (max-width: 992px)
  .maintenance-dashboard-route
    .maint-panel-section
      margin-bottom 30px


@media screen and (max-width: 768px)
  .maintenance-dashboard-route
    .maint-primary-bar
      .button-row 
        display inline-flex
        margin-top 15px

@media screen and (max-width: 576px)
  .maintenance-dashboard-route
    padding-top 16px
    .date-user
      flex-direction row
      justify-content space-between
    .maint-primary-bar
      .button-row 
        display flex
        justify-content flex-start
        .button
          font-size 1.6rem
          padding 10px 15px
    .maintenance-calendar-dir .controls
      margin-top 30px