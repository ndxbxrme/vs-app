
.maintenance-agenda-route
  display flex
  flex-direction column
  height 100%
  overflow hidden
  .nav-period
    color vs-orange
    font-size 1.6rem
    font-weight 600
  .agenda-toolbar
    flex-shrink 0
    background #fff
    border-bottom 1px solid vs-lightgrey
    z-index 20
    padding 10px 0px
    .maint-user-select
      min-width 200px
      max-width 250px
      .select2-container
        img 
          border-radius 50%
        .select2-choice
          border-radius 4px
          border 1px solid vs-lightgrey
          background #fff
          height 60px
          line-height 60px
          padding 0px 10px
          font-size 1.3rem
          color vs-grey
          box-shadow none
          .select2-arrow
            border-radius 0 4px 4px 0
            background none
            border none
            top 15px
        &.select2-dropdown-open .select2-choice
          border-color vs-orange
          border-bottom-left-radius 0
          border-bottom-right-radius 0
    a.button
      margin-bottom 0px

  .agenda-nav
    border: 1px solid vs-lightgrey
    text-align center
    border-radius 30px
    display flex
    justify-content center
    align-items center
    width fit-content
    margin 30px auto
    padding 0px
    background white
    button 
      text-align center
      color vs-grey
      background none
      font-size 1.6rem
      font-weight 600
      border none
      border-radius 0px
      border-right 1px solid vs-lightgrey
      margin 0px
      padding 10px 15px
      &:last-child
        border-right none

  .agenda-body
    flex 1
    overflow-y auto
    padding 20px

  .agenda-day
    background #fff
    border-radius 10px
    border 1px solid vs-lightgrey
    margin-bottom 15px
    overflow hidden
    &.is-today
      border-color vs-orange
      .agenda-day-header
        background lighten(vs-orange, 90%)
    &.has-tasks
      box-shadow 0 1px 4px rgba(0,0,0,0.08)

  .agenda-day-header
    display flex
    align-items center
    justify-content space-between
    padding 10px 20px
    border-bottom 1px solid vs-lightgrey
    background #f9f9f9
    .day-label
      display flex
      flex-direction column
      .day-weekday
        font-weight 700
        font-size 1.6rem
        color vs-grey
      .day-date
        font-size 1.3rem
        color #888
    .day-meta
      display flex
      align-items center
      gap 10px
      .day-count
        font-size 1.6rem
        font-weight 600
        color vs-grey
      .day-income
        font-size 1.4rem
        font-weight 700
        color #035c03
    .button
      margin 0px

  .agenda-empty
    padding 10px 20px
    color #bbb
    font-size 1.4rem
    font-style italic

  .agenda-tasks
    padding 0 10px 5px

  .agenda-task-row
    display flex
    align-items flex-start
    gap 15px
    padding 12px 10px
    border-bottom 1px solid #f2f2f2
    cursor pointer
    &:last-child
      border-bottom none
    &:hover
      background #f9f9f9
    .task-time
      flex-shrink 0
      width 9rem
      font-size 1.4rem
      color vs-orange
      font-weight 600
      padding-top 2px
      .task-duration
        display block
        font-size 1.4rem
        color vs-grey
        margin-top 3px
    .task-body
      flex 1
      min-width 0
      .task-job
        font-size 1.6rem
        font-weight 600
        color vs-grey
        overflow hidden
        text-overflow ellipsis
        white-space nowrap
      .task-property
        font-size 1.4rem
        color #888
        margin-top 2px
        overflow hidden
        text-overflow ellipsis
        white-space nowrap
    .task-aside
      flex-shrink 0
      display flex
      flex-direction row-reverse
      align-items flex-end
      gap 5px
    .task-status-badge
      display inline-block
      padding 3px 12px
      border-radius 30px
      font-size 1.2rem
      font-weight 600
      color #fff
      &.status-confirmed
        background vs-lightgrey
        color vs-grey
      &.status-quote
        background vs-orange
      &.status-completed
        background #035c03
    .task-cost
      font-size 1.4rem
      font-weight 700
      color vs-grey
    .task-paid-badge
      font-size 1.2rem
      color #888
      border 1px solid vs-lightgrey
      border-radius 4px
      padding 1px 6px
    .task-media-badge
      background #fff
      color #333
      border 1px solid #ccc
      display flex
      align-items center
      justify-content center
      width 30px
      height 30px
      border-radius 30px
      cursor pointer
      transition all 0.3s ease
      &:hover
        background vs-orange
        color white
    .task-doc-badge
      background #fff
      color #333
      border 1px solid #ccc
      display flex
      align-items center
      justify-content center
      width 30px
      height 30px
      border-radius 30px
      cursor pointer
      transition all 0.3s ease
      &:hover
        background vs-orange
        color white

  @media screen and (max-width: 768px)
    .agenda-toolbar-row
      .agenda-user-select
        flex 1 1 100%
        order 2
    .agenda-task-row
      .task-time
        width 7rem
      .task-aside
        .task-status-badge
          display none
@media screen and (max-width: 576px)
  .maintenance-agenda-route
    padding-top 16px
    .agenda-toolbar
      .container-xl
        padding 0 15px
    .date-user
      flex-direction row
      justify-content space-between
    .button-row 
      display flex
      justify-content flex-start
      .button
        font-size 1.6rem
        padding 10px 15px
