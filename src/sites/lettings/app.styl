@import 'variables'
body
  sub
    bottom auto
    vertical-align baseline
  a
    text-decoration none
  th
    vertical-align top
    text-align left
    font-size 1rem
    &.shrink
      width 1%
  td
    vertical-align top
    font-size 1.4rem
    padding 0.5rem
  .holder
    flex 1
    width 100%
    z-index 2
    background #fff
    transition 0.4s
    transform translateX(0px)
    &.mobile-menu-out
      transform translateX(-180px)
  .header, .body, .footer
    display flex
    justify-content center
    width 100%
    box-sizing border-box
    .container
      width 90%
      max-width 1100px
  .has-dropdown
    position relative
  .dropdown
    list-style-type none
    margin 0
    padding 1rem
    position absolute
    min-width 160px
    border-radius 4px
    background #fff
    z-index 10
    border 1px solid #ccc
    box-shadow 2px 2px 2px rgba(0,0,0,0.3)
.desktop-hide
  display none!important
.small-mobile-show
  display none!important
@media screen and (max-width: 992px)
  .mobile-hide
    display none
  .desktop-hide
    display block!important
@media screen and (max-width: 700px)
  .small-mobile-hide
    display none
  .small-mobile-show
    display block!important
.lt-1024
  body
    background vs-grey!important
.mobile
  body
    display block!important
    .body
      min-height 100vh