.sms-dashboard-route
  .tabs
    display flex
    .tab
      padding .5em
      margin .5em .5em .5em 0
      background white
      min-width 5em
      display flex
      justify-content center
      &.selected
        background blue
  .confirm-details
    .item
      display flex
      label
        min-width 9em
      .number-details
        white-space pre-wrap
        max-height 5em
        overflow hidden
        text-overflow ellipsis
        &:hover
          max-height 2000em