.breadcrumbs
  margin-top 85px
  display flex
  flex-wrap wrap
  padding 0.5em 0
  width 100%
  border-bottom 1px solid #e0e0e0
  background: vs-white
  .breadcrumb
    display inline-flex
    align-items: center
    padding 0.5em 1em 0.5em 0.5em 
    margin 0 0.5em 0 0
    color vs-grey
    font-size: 1.4rem
    font-weight 300
    position relative
    border 1px solid #e0e0e0
    border-radius 30px
    .breadcrumb-site
      color white
      background vs-orange
      font-size .8em
      line-height: 1.4
      padding 5px 8px
      border-radius 20px
      margin-right 5px
    &:last-of-type
      background #f1f1f1
@media screen and (max-width:992px)
  .breadcrumbs
    margin-top 142px
@media screen and (max-width:576px)
  .breadcrumbs
    display: none