.site-menu
  height 4em
  z-index 400
  position fixed
  background white
  padding-left 2em
  padding-top .6em
  width 100%
  sites
    display flex
    flex-direction row
  pages
    display none
    background white
  site
    display flex
    flex-direction column
    min-width 9em
    a
      padding .4em .6em
    a:hover, a:focus
      background rgba(0,0,0,0.1)
    &:hover, &:focus
      pages
        display flex
        flex-direction column
        box-shadow 1px 1px 1px rgba(0,0,0,0.1)
    .favorites-site
      font-size .8em
      margin-right .5em