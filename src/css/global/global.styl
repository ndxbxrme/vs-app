@import 'variables'

:root
  --fa-primary-color vs-orange
  --fa-secondary-color #333333
  --fa-secondary-opacity 0.2

html
  font-size 62.5%
  overflow-y scroll

body
  color vs-text
  font-size 1.6rem
  line-height 2.4rem
  font-family proxima-nova, sans-serif
  background vs-lightsilver
  display: flex;
  min-height: 100vh;
  flex-direction: column;
  &.login
    background vs-grey
  sub
    bottom 0px
.main-view
  flex 1

.orange
  color vs-orange
.grey
  color vs-grey

chain-box()
  width 100%
  border 1px solid vs-lightgrey
  border-radius 5px
  padding 1rem
  box-shadow 1px 1px 2px rgba(0,0,0,0.01)
  z-index 10
  background #fff
  box-sizing border-box

.drop-box
  border 1px dashed vs-grey
  border-radius 3px
  background white
  width 100%
  text-align center
  margin 30px 0 10px
  padding 20px
  &.dragover
    h3
      color vs-orange
.document
  border 1px solid vs-lightgrey
  border-radius 3px
  background white
  padding 20px
  margin 0px 0px 10px 0px
  font-weight 600
  label
    font-weight 500
  svg
    font-size 5rem
  .controls
    margin-top 10px
.container-xl
  padding 0 30px
@media screen and (max-width:576px)
  .main-view
    padding-top 90px