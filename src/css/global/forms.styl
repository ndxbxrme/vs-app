@import '../variables'

input[type=text], input[type=email], input[type=password], select, textarea
  border 1px solid vs-lightgrey
  border-radius 3px
  background vs-tablegrey
  margin-bottom .5rem
  padding .8rem
  appearance none
  width: 100%
label 
  margin-bottom 5px

.form-row
  display flex
  flex-wrap wrap
  .form-label
    width 20%
    padding-top 3.6rem
    @media screen and (max-width: 740px)
      display none
  .form-item
    display flex
    flex-direction column
    flex 1
    margin-left 1.6rem
    margin-bottom 1.6rem
  .address, .user
    flex 1
  .user
    display flex
    flex-wrap wrap
.panel
  .controls
    width 100%
    display flex
    justify-content flex-end
    .btn
      margin-left 1rem
  h2, h3, h4
    width 100%
    padding 1.6rem 1.02rem 0 1.02rem
    margin 0
  .row
    h3
      flex 1
    
.SumoSelect
  width 100%
  height 4.4rem
  .SelectBox
    height 4.4rem
    line-height 4.4rem
    padding 0 1.28rem .1rem
  .CaptionCont
    border .1rem solid #d7dadd
    font-size 1.6rem
    background-color vs-brightwhite
    .placeholder
      color rgba(57,74,88,.618)!important
      font-style normal!important
.optWrapper
  top 4.4rem!important