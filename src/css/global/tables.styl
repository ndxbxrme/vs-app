@import '../variables'
.tr
  display flex
  .th, .td
    flex 1
    box-sizing border-box
    label
      display none
  .th
    padding 20px
    background vs-grey
    text-align center
    color white
    font-size 2rem
    font-weight 100
    border-bottom 1px solid vs-lightgrey
  .td
    padding 15px
    text-align center
    font-size: 1.6rem
    border-bottom 1px solid vs-lightgrey
    background: white
    &.clickable
      color vs-orange
      cursor pointer

table.table
  margin-bottom 0
  &>:not(:first-child)
    border none
  th, td
    padding 15px
    text-align left
    border-bottom 1px solid vs-lightgrey