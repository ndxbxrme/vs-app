@import 'variables'
body
  h1
    font-size 2.5rem
    line-height 3.5rem
    margin-bottom 20px
    font-weight 600
  h2
    font-size 2rem
    line-height 3rem
    margin-bottom 25px
    font-weight 600
    position relative
    i
      margin-right 5px
  h3
    font-size 2rem
    line-height 3rem
    margin-bottom 20px
    font-weight 600
  h4, h5
    font-size 2rem
    line-height 3rem
    margin-bottom 10px
    font-weight 600
  p
    margin-bottom 15px
    font-size 1.6rem
    font-weight 300
  a
    color vs-orange
    transition color 0.4s ease-in-out
    text-decoration none
    font-size 1.6rem
    &:hover
      color vs-grey
  ul
    margin 0 0 30px 27px
    li
      text-indent -27px
      &:before
        content ''
        display inline-block
        width 16px
        height 16px
        margin-right 10px
        vertical-align middle
  strong
    font-weight 600
  hr
    margin 20px 0
    border none
    border-bottom 1px solid vs-lightgrey
    background none
    opacity 1
    &.white
      border-color white
    &.orange
      border-color vs-orange