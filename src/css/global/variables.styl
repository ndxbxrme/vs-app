vs-orange = #f15b25
vs-grey = #333333
vs-green = #00A685
vs-amber = orange
vs-red = #f12540
vs-lightgrey = #ccc
vs-tablegrey = #f5f5f5
vs-white = #fbfbfb
vs-brightwhite = #fdfdfd
vs-text = #333333
vs-link = #44789f
vs-silver = #9ca4ab
vs-lightsilver = #e7eef3
vs-red = #bd1622
vs-warning = #d17b36

:root
  --fa-primary-color vs-orange
  --fa-secondary-color #333333
  --fa-secondary-opacity 0.8

html
  font-size 62.5%
	overflow-y scroll

body
  color vs-text
  font-size 1.6rem
  line-height 2.4rem
  font-family proxima-nova, sans-serif
  background vs-lightsilver
  &.login
    background vs-grey

.orange
  color vs-orange
.grey
  color vs-grey

chain-box()
  width 100%
  border 1px solid vs-lightgrey
  border-radius 5px
  padding 1rem
  box-shadow 1px 1px 2px rgba(0,0,0,0.01)
  z-index 10
  background #fff
  box-sizing border-box