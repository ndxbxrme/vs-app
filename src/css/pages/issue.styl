.issue-route
  h1 
    display flex
    justify-content space-between
    .source-icon
      margin 0
  h2.issue-address
    color vs-orange
    display flex
    justify-content space-between
    margin-top -20px
    margin-bottom 10px
    span
      color vs-grey
  .form-holder
    &.issue-header
      margin-bottom 30px
      padding 15px
      background none
      input[type=text]
        margin-bottom 0px
      .quote-save button
        margin-bottom 0px
        padding 12px 30px
  .issue-form
    border-bottom 1px solid vs-orange
    margin-bottom 40px
    padding-bottom 20px
  .tenant-details,
  .issue-details,
  .issue-actions,
  .contractor-actions
    h3
      margin-bottom 10px
    .tenant-name
      font-size 2rem
  .issue-details
    border 1px solid vs-lightgrey
    border-radius 3px
    background white
    padding 30px
  .edit-icons
    svg
      font-size 2rem
      margin-right 10px
  .issue-actions
    margin-top 30px
    padding-top 30px
    border-top 1px solid vs-orange
  .contractor-actions
    .SumoSelect,
    select,
    input[type=text]
      margin-bottom 0px
  .button-row
    button
      width 100%
  .case-notes
    .case-note
      border 1px solid #f1f1f1
      padding 10px
      border-radius 5px
      margin-bottom 10px
      .date 
        font-weight 600
        .edit, .delete
          display inline
          float right
          color vs-orange
          margin-left 1rem
      p, h1, h2, h3, h4, h5, h6
        margin 0 0 0px 0
      img
        margin-right 5px
  .form-row
    border-bottom 1px solid vs-lightgrey
    padding-bottom 10px
    margin-bottom 10px
    &.top-row
      border-color vs-orange
  .add-note
    .CodeMirror
      border 1px solid vs-lightgrey
      border-radius 5px
      background #f1f1f1
      padding-left 15px
      height 120px
      pre
        font-size 1rem
    button
      margin-top 15px
      background vs-orange
      color white
      border vs-orange
      &:hover
        background vs-grey
  .message-center
    border 1px solid vs-lightgrey
    border-radius 3px
    background vs-tablegrey
    padding 30px
  .notes-and-messages
    margin-bottom 20px


