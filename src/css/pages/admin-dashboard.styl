.admin-dashboard
  padding-top 30px
  .intro
    color vs-grey
    margin 10px 0 25px
    font-size 1.6rem
  .quick-links
    margin-top 10px
    .button-row
      align-items stretch
    a.big-link
      height 100%
      text-align center
      display flex
      flex-direction column
      justify-content center
      gap 10px
      padding 20px 25px
      i, svg
        font-size 4.5rem
        margin 0 auto 10px

@media screen and (max-width: 768px)
  .admin-dashboard
    .intro
      margin 5px 0 20px
    .quick-links
      a.big-link
        font-size 1.6rem
        line-height 2.2rem
        padding 10px 25px
        i, svg
          font-size 3rem
