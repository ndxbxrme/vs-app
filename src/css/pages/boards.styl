.flex-right
  display flex
  justify-content flex-end
  flex-wrap wrap
.board-date
  width auto!important
.admin-boards,
.admin-windows
  .header-row
    input[type="text"]
      margin-bottom 0px
  .search-row 
    flex-direction column
    align-items flex-start !important
  .button-row
    flex-shrink 0
    .button
      flex-shrink 0
      margin 10px 5px
      &.button-alt
        border none
  .search-results
    .card
      border-radius 30px
      overflow hidden
      .card-header
        padding 15px
      .card-body
        margin-top 0px
        border none

  .search-results-list
    .search-result-item
      display flex
      flex-direction column
      padding 1.5rem
      border-bottom 1px solid #e5e7eb
      cursor pointer
      transition all 0.2s ease
      &:last-child
        border-bottom none
      &:hover
        background-color #f9fafb
        padding-left 2rem
        .result-address
          color #f15b25
      .result-address
        font-size 1.6rem
        font-weight 600
        margin-bottom 0.5rem
        color vs-grey
        transition color 0.2s ease
      .result-details
        display flex
        gap 1.5rem
        flex-wrap wrap
        font-size 1.4rem
        color vs-grey
        span
          display flex
          align-items center
          gap 0.3rem
          i
            opacity 0.7
  .card-body
    margin-top 15px
    padding 30px
    background white
    border 1px solid vs-lightgrey
    border-radius 30px
.printScreen
  padding 20px 40px
  display none
@media print
  .site-menu, .breadcrumbs, .main-view, .footer
    display none!important
  .printScreen
    display block!important
    p
      margin 5px
  body, html
    background none!important