@import './css/**/*.styl'
@import './sites/**/*.styl'

body.agency_*
  color red

.main-view
  padding-top 1em
  background vs-lightsilver
  height 100%

::-webkit-scrollbar
  width 8px
::-webkit-scrollbar-track
  background transparent
::-webkit-scrollbar-thumb
  background #394045
::-webkit-scrollbar-thumb:hover 
  background #555
input 
  -webkit-appearance none

// Pagination
.pagination
  justify-content center
  background vs-tablegrey
  padding 10px
  .page
    &:first-child,
    &:last-child,
    &.selected
      color vs-orange